{
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "globals": {
        "ts-jest": {
            "tsConfigFile": "tsconfig.json"
        }
    },
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx"],
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.+(ts|tsx|js|jsx)", "**/src/**/*.spec.+(ts|tsx|js|jsx)"],
    "transform": {
        "^.+\\.(ts|tsx|js|jsx)$": "ts-jest"
    }
}
