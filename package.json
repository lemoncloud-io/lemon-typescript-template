{
    "name": "lemon-typescript-template",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "nodemon-start": "NODE_ENV=development nodemon dist/app.js",
        "dev": "npm run build && npm run start",
        "start": "npm run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run nodemon-start\"",
        "build": "npm run build-ts",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "test": "jest --config=jest.config.json --watchAll",
        "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/lemoncloud-io/lemoncloud-typescript-template.git"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint '*/**/*.{js,ts,tsx}' --fix",
            "git add"
        ]
    },
    "author": "Louis",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/lemoncloud-io/lemoncloud-typescript-template/issues"
    },
    "homepage": "https://github.com/lemoncloud-io/lemoncloud-typescript-template#readme",
    "dependencies": {
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "dotenv": "^8.0.0",
        "express": "^4.16.4",
        "morgan": "^1.9.1",
        "supertest": "^4.0.2",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/cors": "^2.8.5",
        "@types/dotenv": "^6.1.1",
        "@types/jest": "^24.0.12",
        "@types/morgan": "^1.7.35",
        "@types/supertest": "^2.0.7",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^1.7.0",
        "@typescript-eslint/parser": "^1.7.0",
        "concurrently": "^4.1.0",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^4.2.0",
        "eslint-plugin-prettier": "^3.0.1",
        "husky": "^2.2.0",
        "jest": "^24.8.0",
        "lint-staged": "^8.1.6",
        "nodemon": "^1.19.0",
        "prettier": "^1.17.0",
        "ts-jest": "^24.0.2",
        "typescript": "^3.4.5"
    }
}
